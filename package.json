{
    "name": "terminal-code-runner",
    "displayName": "Terminal Code Runner",
    "publisher": "zardoy",
    "version": "0.0.0-dev",
    "private": true,
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "properties": {
                "execMap": {
                    "type": "object",
                    "markdownDescription": "Set the executor by [language id](https://code.visualstudio.com/docs/languages/identifiers), support [VSCode Variables](https://code.visualstudio.com/docs/editor/variables-reference)",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {
                        "javascript": "node ${file}",
                        "typescript": "tsx ${file}"
                    }
                },
                "executorMapByGlob": {
                    "type": "object",
                    "markdownDescription": "Set the executor by [globs](https://code.visualstudio.com/api/references/vscode-api#GlobPattern), support [VSCode Variables](https://code.visualstudio.com/docs/editor/variables-reference)",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {
                        "**/*.scpt": "osascript $fileName"
                    }
                },
                "defaultExec": {
                    "type": "string",
                    "default": ""
                },
                "terminalCwd": {
                    "type": "string",
                    "enum": [
                        "workspace",
                        "file"
                    ],
                    "default": "workspace"
                },
                "focusOnEditor": {
                    "type": "boolean",
                    "description": "Focus on editor whenever the file is run instead of terminal",
                    "default": false
                },
                "clearTerminal": {
                    "type": "boolean",
                    "default": false
                },
                "saveFile": {
                    "type": "string",
                    "enum": [
                        "disabled",
                        "onlyActive",
                        "all"
                    ],
                    "default": "onlyActive"
                }
            }
        },
        "commands": [
            {
                "command": "runFile",
                "title": "Run File",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "terminal-code-runner.runButton",
                    "group": "navigation",
                    "command": "runFile"
                }
            ]
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": false,
            "description": "Running arbitrary code available only in trusted workspaces"
        },
        "virtualWorkspaces": {
            "supported": false,
            "description": "This extension requires access to the terminal"
        }
    },
    "scripts": {
        "start": "vscode-framework start",
        "lint": "eslint src/**"
    },
    "devDependencies": {
        "@types/node": "^17.0.5",
        "@types/vscode": "^1.63.1",
        "@zardoy/tsconfig": "^1.2.2",
        "eslint": "^8.6.0",
        "eslint-config-zardoy": "^0.2.4",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "vscode-framework": "^0.0.18"
    }
}
